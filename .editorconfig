# Learn more about EditorConfig at http://editorconfig.org

root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.{clj,cljs,cljc,edn}]
indent_style = space

[*.{tf,tfvars}]
indent_size = 4
indent_style = space

[*.{md,markdown}]
trim_trailing_whitespace = false

[Makefile]
tab_width = 2
indent_style = tab

[*.js]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[{package.json}]
indent_style = space
indent_size = 2
